{% extends 'User/base_dashboard.html.twig' %}

{% block title %}Reservation Management - EvoPlan{% endblock %}

{% block content %}
    <header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
        <div class="container-xl px-4">
            <div class="page-header-content pt-4">
                <div class="row align-items-center justify-content-between">
                    <div class="col-auto mt-4">
                        <h1 class="page-header-title">
                            <div class="page-header-icon"><i class="fas fa-users"></i></div>
                            Reservations
                        </h1>
                        <div class="page-header-subtitle">Manage event reservations</div>
                    </div>
                    <div class="col-12 col-xl-auto mt-4">
                        {# Optional: Add action button here if needed #}
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container-xl px-4 mt-n10">
        <div class="card mb-4">
            <div class="card-header">Reservation List</div>
            <div class="card-body">
                <table id="datatablesSimple" class="table table-striped">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Client Phone</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for reservation in reservations %}
                        <tr>
                            <td>{{ reservation.idReservation }}</td>
                            <td>{{ reservation.client ? reservation.client.phoneNumber : 'N/A' }}</td>
                            <td>
                                {% if reservation.statut.value == 'CONFIRMÉE' %}
                                    <span class="badge bg-success">{{ reservation.statut.value }}</span>
                                {% elseif reservation.statut.value == 'ANNULÉE' %}
                                    <span class="badge bg-danger">{{ reservation.statut.value }}</span>
                                {% else %}
                                    <span class="badge bg-warning text-dark">{{ reservation.statut.value }}</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="d-flex">
                                    <a href="{{ path('app_reservation_edit', {'id_reservation': reservation.idReservation}) }}"
                                       class="btn btn-primary btn-sm me-1">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" class="delete-form"
                                          action="{{ path('app_reservation_delete', {'id_reservation': reservation.idReservation}) }}"
                                          style="display: inline-block;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.idReservation) }}">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center text-muted">No reservations found for this event</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.querySelectorAll(".delete-form").forEach(form => {
            form.addEventListener("submit", function (event) {
                event.preventDefault();
                Swal.fire({
                    title: "Are you sure?",
                    text: "This action cannot be undone!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#3085d6",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        this.submit();
                    }
                });
            });
        });
    </script>
{% endblock %}