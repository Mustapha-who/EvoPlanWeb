{% extends 'base.html.twig' %}

{% block title %}Gestion des Équipements{% endblock %}

{% block body %}
    <header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
        <div class="container-xl px-4">
            <div class="page-header-content pt-4">
                <div class="row align-items-center justify-content-between">
                    <div class="col-auto mt-4">
                        <h1 class="page-header-title">
                            <div class="page-header-icon"><i class="bi bi-tools"></i></div>
                            Gestion des Équipements
                        </h1>
                    </div>
                    <div class="col-12 col-xl-auto mt-4">
                        <a href="{{ path('app_equipement_new') }}" class="btn btn-light">
                            <i class="bi bi-plus-circle me-1"></i>
                            Nouvel équipement
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main page content-->
    <div class="container-xl px-4 mt-n10">
        <div class="card mb-4">
            <div class="card-header">Liste des Équipements</div>
            <div class="card-body">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show mb-4">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}

                <div class="table-responsive">
                    <table id="datatablesSimple" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Type d'équipement</th>
                                <th>Quantité</th>
                                <th>Ressource associée</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for equipement in equipements %}
                                <tr>
                                    <td>{{ equipement.id }}</td>
                                    <td>{{ equipement.equipementType }}</td>
                                    <td>
                                        <span class="badge {{ equipement.quantity > 0 ? 'bg-success' : 'bg-danger' }} rounded-pill">
                                            {{ equipement.quantity }}
                                        </span>
                                    </td>
                                    <td>
                                        {% if equipement.ressource %}
                                            <span class="badge bg-info text-dark rounded-pill">
                                                {{ equipement.ressource.name }}
                                            </span>
                                        {% else %}
                                            <span class="badge bg-secondary rounded-pill">
                                                Aucune
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td class="action-buttons">
                                        <a href="{{ path('app_equipement_show', {'id': equipement.id}) }}" 
                                           class="btn btn-sm btn-outline-primary"
                                           title="Voir">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="{{ path('app_equipement_edit', {'id': equipement.id}) }}" 
                                           class="btn btn-sm btn-outline-warning ms-1"
                                           title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="post" action="{{ path('app_equipement_delete', {'id': equipement.id}) }}" 
                                              class="d-inline" 
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet équipement ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ equipement.id) }}">
                                            <button class="btn btn-sm btn-outline-danger ms-1"
                                                    title="Supprimer">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center py-4">
                                        <div class="alert alert-info">
                                            <i class="bi bi-info-circle me-2"></i>
                                            Aucun équipement trouvé
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}