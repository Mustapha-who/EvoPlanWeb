{% extends 'User/base_dashboard.html.twig' %}

{% block title %}Partnership Details - EvoPlan{% endblock %}

{% block content %}
    <header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
        <div class="container-xl px-4">
            <div class="page-header-content pt-4">
                <div class="row align-items-center justify-content-between">
                    <div class="col-auto mt-4">
                        <h1 class="page-header-title">Partnership Details</h1>
                        <div class="page-header-subtitle">View partnership information</div>
                    </div>
                    <div class="col-12 col-xl-auto mt-4">
                        <div class="d-flex">
                            <a href="{{ path('app_partnership_edit', {'id_partnership': partnership.getId()}) }}" class="btn btn-white lift me-2">
                                <i class="fas fa-edit me-1"></i>
                                Edit
                            </a>
                            <a href="{{ path('app_partnership_index') }}" class="btn btn-white lift">
                                <i class="fas fa-arrow-left me-1"></i>
                                Back to list
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Main page content-->
    <div class="container-xl px-4 mt-n10">
        <div class="card mb-4">
            <div class="card-header">Partnership Information</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tbody>
                            <tr>
                                <th>Partner:</th>
                                <td>{{ partnership.idPartner ? partnership.idPartner.email : '' }}</td>
                            </tr>
                            <tr>
                                <th>Partner Logo:</th>
                                <td>
                                    {% if partnership.idPartner and partnership.idPartner.logo %}
                                        <img src="{{ asset(partnership.idPartner.logo) }}" alt="Partner logo" style="height: 100px; width: auto;">
                                    {% else %}
                                        No logo
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th>Event:</th>
                                <td>{{ partnership.idEvent ? partnership.idEvent.nom : '' }}</td>
                            </tr>
                            <tr>
                                <th>Start Date:</th>
                                <td>{{ partnership.dateDebut ? partnership.dateDebut|date('Y-m-d') : '' }}</td>
                            </tr>
                            <tr>
                                <th>End Date:</th>
                                <td>{{ partnership.dateFin ? partnership.dateFin|date('Y-m-d') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Terms:</th>
                                <td>{{ partnership.terms }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        window.addEventListener('DOMContentLoaded', event => {
            if (typeof feather !== 'undefined') {
                feather.replace();
            }
        });
    </script>
{% endblock %}