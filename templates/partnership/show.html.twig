{% extends 'base.html.twig' %}

{% block title %}Partnership Details - EvoPlan{% endblock %}

{% block page_title %}Partnership Details{% endblock %}

{% block page_subtitle %}View partnership information{% endblock %}

{% block content %}
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>Partnership Information</div>
            <div>
                <a href="{{ path('app_partnership_edit', {'id_partnership': partnership.getId()}) }}" class="btn btn-primary me-2">
                    <i data-feather="edit" class="me-1"></i>Edit
                </a>
                <a href="{{ path('app_partnership_index') }}" class="btn btn-light">
                    <i data-feather="arrow-left" class="me-1"></i>Back to list
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th>Partner:</th>
                                <td>{{ partnership.idPartner ? partnership.idPartner.email : '' }}</td>
                            </tr>
                            <tr>
                                <th>Partner Logo:</th>
                                <td>
                                    {% if partnership.idPartner and partnership.idPartner.logo %}
                                        <img src="{{ asset(partnership.idPartner.logo) }}" alt="Partner logo" style="height: 100px; width: auto;">
                                    {% else %}
                                        No logo
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th>Event:</th>
                                <td>{{ partnership.idEvent ? partnership.idEvent.nom : '' }}</td>
                            </tr>
                            <tr>
                                <th>Start Date:</th>
                                <td>{{ partnership.dateDebut ? partnership.dateDebut|date('Y-m-d') : '' }}</td>
                            </tr>
                            <tr>
                                <th>End Date:</th>
                                <td>{{ partnership.dateFin ? partnership.dateFin|date('Y-m-d') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Terms:</th>
                                <td>{{ partnership.terms }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        window.addEventListener('DOMContentLoaded', event => {
            feather.replace();
        });
    </script>
{% endblock %}
