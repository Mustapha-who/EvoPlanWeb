{% extends 'base.html.twig' %}

{% block title %}Partnerships - EvoPlan{% endblock %}

{% block page_title %}Partnerships{% endblock %}

{% block page_subtitle %}Manage your partnerships{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" type="text/css">
{% endblock %}

{% block header_actions %}
    <a href="{{ path('app_partnership_new') }}" class="btn btn-primary lift">
        <i class="fas fa-plus me-1"></i>
        Add New Partnership
    </a>
{% endblock %}

{% block content %}
    <div class="card mb-4">
        <div class="card-header">Partnerships List</div>
        <div class="card-body">
            <table id="datatablesSimple" class="table table-striped">
                <thead>
                    <tr>
                        <th>Partner</th>
                        <th>Partner Logo</th>
                        <th>Event</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for partnership in partnerships %}
                    <tr>
                        <td>{{ partnership.idPartner ? partnership.idPartner.email : '' }}</td>
                        <td>
                            {% if partnership.idPartner and partnership.idPartner.logo %}
                                <img src="{{ asset(partnership.idPartner.logo) }}" alt="Partner logo" style="height: 50px; width: auto;">
                            {% else %}
                                No logo
                            {% endif %}
                        </td>
                        <td>{{ partnership.idEvent ? partnership.idEvent.nom : '' }}</td>
                        <td>{{ partnership.dateDebut ? partnership.dateDebut|date('Y-m-d') : '' }}</td>
                        <td>{{ partnership.dateFin ? partnership.dateFin|date('Y-m-d') : '' }}</td>
                        <td>
                            <div class="d-flex">
                                <a href="{{ path('app_partnership_show', {'id_partnership': partnership.getId()}) }}" 
                                   class="btn btn-primary me-1">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_partnership_edit', {'id_partnership': partnership.getId()}) }}"
                                   class="btn btn-warning me-1">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="#" 
                                   class="btn btn-danger"
                                   onclick="if(confirm('Are you sure you want to delete this partnership?')) document.getElementById('delete-form-{{ partnership.getId() }}').submit();">
                                    <i class="fas fa-trash"></i>
                                </a>
                                <form id="delete-form-{{ partnership.getId() }}" method="post" action="{{ path('app_partnership_delete', {'id_partnership': partnership.getId()}) }}" style="display: none;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ partnership.getId()) }}">
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="7" class="text-center">No partnerships found</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" type="text/javascript"></script>
    <script>
        window.addEventListener('DOMContentLoaded', event => {
            // Initialize DataTables
            const datatablesSimple = document.getElementById('datatablesSimple');
            if (datatablesSimple) {
                const dataTable = new simpleDatatables.DataTable(datatablesSimple);
                
                // Re-initialize icons after DataTables updates
                dataTable.on('datatable.init', function() {
                    if (typeof feather !== 'undefined') {
                        feather.replace();
                    }
                });
                
                dataTable.on('datatable.update', function() {
                    if (typeof feather !== 'undefined') {
                        feather.replace();
                    }
                });
                
                dataTable.on('datatable.page', function() {
                    if (typeof feather !== 'undefined') {
                        feather.replace();
                    }
                });
            }
            
            // Initialize Feather Icons
            if (typeof feather !== 'undefined') {
                feather.replace();
            }
        });
    </script>
{% endblock %}
