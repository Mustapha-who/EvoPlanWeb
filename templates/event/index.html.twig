{% extends 'User/base_dashboard.html.twig' %}

{% block title %}Event Management - EvoPlan{% endblock %}

{% block content %}
    <header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
        {% for message in app.flashes('event_success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-ticket-alt me-2"></i> {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        <div class="container-xl px-4">
            <div class="page-header-content pt-4">
                <div class="row align-items-center justify-content-between">
                    <div class="col-auto mt-4">
                        <h1 class="page-header-title">
                            <div class="page-header-icon"><i class="fas fa-calendar-alt"></i></div>
                            Events
                        </h1>
                        <div class="page-header-subtitle">Event management and overview</div>
                    </div>
                    <div class="col-12 col-xl-auto mt-4">
                        <a href="{{ path('app_event_new') }}" class="btn btn-white lift">
                            <i class="fas fa-plus me-1"></i>
                            Create New Event
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main page content-->
    <div class="container-xl px-4 mt-n10">
        <div class="card mb-4">
            <div class="card-header">Event List</div>
            <div class="card-body">
                <table id="datatablesSimple" class="table table-striped">
                    <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for event in events %}
                        <tr>
                            <td>
                                {% if event.imageEvent %}
                                    <img src="{{ asset('uploads/' ~ event.imageEvent) }}" alt="Event Image" width="60" height="60" class="rounded">
                                {% else %}
                                    <span class="text-muted">No Image</span>
                                {% endif %}
                            </td>
                            <td>{{ event.nom }}</td>
                            <td>{{ event.dateDebut ? event.dateDebut|date('Y-m-d') : '' }}</td>
                            <td>{{ event.dateFin ? event.dateFin|date('Y-m-d') : '' }}</td>
                            <td>{{ event.prix }} TND</td>
                            <td>
                                {% if event.statut.value == 'DISPONIBLE' %}
                                    <span class="badge bg-success">{{ event.statut.value }}</span>
                                {% else %}
                                    <span class="badge bg-danger">{{ event.statut.value }}</span>
                                {% endif %}
                            </td>
                           <td>
                               <div class="d-flex">
                                   <a href="{{ path('app_event_edit', {'id_event': event.id_event}) }}" class="btn btn-primary btn-sm me-1">
                                       <i class="fas fa-edit"></i>
                                   </a>
                                   <a href="{{ path('app_reservations_event', {'id_event': event.id_event}) }}" class="btn btn-info btn-sm me-1">
                                       <i class="fas fa-users"></i>
                                   </a>
                                   <a href="{{ path('app_event_stats', {'id': event.id_event}) }}" class="btn btn-warning btn-sm me-1">
                                       <i class="fas fa-chart-line"></i>
                                   </a>
                                   <form method="post" action="{{ path('app_event_delete', {'id_event': event.id_event}) }}" style="display: inline-block" onsubmit="return confirm('Are you sure you want to delete this event?');">
                                       <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id_event) }}">
                                       <button type="submit" class="btn btn-danger btn-sm">
                                           <i class="fas fa-trash"></i>
                                       </button>
                                   </form>
                               </div>
                           </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center text-muted">No records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        window.addEventListener('DOMContentLoaded', event => {
            if (typeof feather !== 'undefined') {
                feather.replace();
            }
        });
    </script>
{% endblock %}