{% extends 'User/base_dashboard.html.twig' %}

{% block title %}
    Accueil - Dashboard
{% endblock %}

{% block content %}
    <section class="hero-section py-10 py-lg-5" style="background: linear-gradient(135deg, #f8f9fc 0%, #e9f0ff 100%);">
        <div class="container px-4">
            <div class="hero-card bg-white p-4 p-md-5 rounded-4 shadow-lg overflow-hidden position-relative">
                <!-- Élément décoratif -->
                <div class="position-absolute top-0 end-0 w-100 h-100 bg-primary-soft opacity-10 rounded-4"
                     style="clip-path: polygon(100% 0, 100% 100%, 30% 100%); z-index: 0;"></div>

                <div class="row align-items-center g-4 g-lg-5 position-relative" style="z-index: 1;">
                    <!-- Texte à gauche -->
                    <div class="col-lg-6 pe-lg-5">
                        <h2 class="text-gradient-primary fw-bold mb-3" style="font-size: 1.75rem;">
                            Pour ceux qui <span class="text-primary">aiment</span>
                        </h2>
                        <h1 class="display-4 fw-bold text-dark mb-4" style="line-height: 1.2;">
                            Prendre soin de leur <span class="text-primary">santé</span>
                        </h1>
                        <p class="lead text-muted mb-4 mb-lg-5" style="font-size: 1.25rem;">
                            Découvrez des événements bien-être, santé, nutrition, fitness et plus près de chez vous.
                        </p>

                        <div class="d-flex flex-wrap gap-3">
                            <a href="#upcoming-events" class="btn btn-primary btn-lg px-4 px-lg-5 py-3 rounded-pill fw-bold" id="explore-events-btn">
                                <i class="fas fa-calendar-alt me-2"></i>Explorer les événements
                            </a>
                        </div>

                    </div>

                    <!-- Image à droite -->
                    <div class="col-lg-6 text-center">
                        <div class="position-relative">
                            <img src="https://images.unsplash.com/photo-1571019613454-1cb2f99b2d8b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80"
                                 alt="Événement santé"
                                 class="img-fluid rounded-4 shadow-lg"
                                 style="max-height: 500px; object-fit: cover; border: 8px solid white;" />
                            <div class="position-absolute bottom-0 start-0 bg-white p-3 rounded-3 shadow-sm ms-4 mb-4">
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary-soft p-2 rounded-3 me-3">
                                        <i class="fas fa-calendar-check text-primary fs-4"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Contenu principal -->
    <div class="container-xl px-4 mt-5">
        <!-- Filtres améliorés -->
        <div class="card mb-4 border-0 shadow-sm">
            <div class="card-body py-4">
                <h5 class="card-title text-dark mb-4">Trouver l'événement parfait</h5>
                <form action="{{ path('app_event_home') }}" method="get">
                    <div class="row g-3 align-items-center">
                        <!-- Filtre par lieu -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Lieu</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                <select name="lieu" class="form-select">
                                    <option value="">Tous les lieux</option>
                                    {% for lieu in lieux %}
                                        <option value="{{ lieu.value }}"
                                                {% if app.request.query.get('lieu') == lieu.value %}selected{% endif %}>
                                            {{ lieu.value }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <!-- Filtre par date -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Date</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                <select name="date" class="form-select">
                                    <option value="">Toutes les dates</option>
                                    <option value="today" {% if app.request.query.get('date') == 'today' %}selected{% endif %}>Aujourd'hui</option>
                                    <option value="tomorrow" {% if app.request.query.get('date') == 'tomorrow' %}selected{% endif %}>Demain</option>
                                    <option value="week" {% if app.request.query.get('date') == 'week' %}selected{% endif %}>Cette semaine</option>
                                    <option value="weekend" {% if app.request.query.get('date') == 'weekend' %}selected{% endif %}>Ce week-end</option>
                                    <option value="month" {% if app.request.query.get('date') == 'month' %}selected{% endif %}>Ce mois-ci</option>
                                </select>
                            </div>
                        </div>

                        <!-- Boutons -->
                        <div class="col-12 mt-3">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-search me-2"></i>Rechercher
                            </button>
                            {% if app.request.query.get('lieu') or app.request.query.get('date') %}
                                <a href="{{ path('app_event_home') }}" class="btn btn-outline-secondary ms-2">
                                    Réinitialiser
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Section Événements à venir améliorée -->
        <section id="upcoming-events">
            <div class="container-xl px-4">
                <div class="events-header">
                    <p>Découvrez nos prochains événements dans le domaine de la santé et du bien-être</p>
                </div>

                <div class="row g-4">
                    {% for event in events %}
                        <div class="col-lg-4 col-md-6">
                            <div class="event-card-enhanced">
                                <div class="position-relative overflow-hidden">
                                    {% if event.imageEvent %}
                                        <img src="{{ asset('uploads/' ~ event.imageEvent) }}" class="card-img-top" alt="{{ event.nom }}">
                                    {% else %}
                                        <span class="text-muted">No Image</span>
                                    {% endif %}
                                    <span class="event-badge
                                    {% if event.statut.value == 'DISPONIBLE' %}bg-success-soft text-success
                                    {% else %}bg-danger-soft text-danger{% endif %}">
                                    {{ event.statut.value }}
                                </span>
                                </div>
                                <div class="card-body">
                                    <h3 class="card-title">{{ event.nom }}</h3>
                                    <div class="event-meta">
                                        <i class="fas fa-calendar-alt me-2"></i>
                                        <span class="fs-6">{{ event.dateDebut|date('d M Y - H:i') }}</span>
                                    </div>
                                    <div class="event-meta">
                                        <i class="fas fa-map-marker-alt me-2"></i>
                                        <span class="fs-6">{{ event.lieu.value }}</span>
                                    </div>
                                    <div class="event-footer">
                                    <span class="event-participants">
                                        <i class="fas fa-euro-sign me-1"></i>
                                        {{ event.prix }}
                                    </span>
                                        <a href="{{ path('app_event_show', {'id_event': event.id_Event}) }}" class="btn btn-sm btn-primary rounded-pill px-3">S'inscrire</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="col-12">
                            <div class="alert alert-info text-center">Aucun événement disponible pour le moment.</div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
        <div class="my-10"></div>
    </div>
{% endblock %}