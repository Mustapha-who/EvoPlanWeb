{% extends 'base.html.twig' %}

{% block title %}Evoplan - {{ event.nom }}{% endblock %}

{% block body %}
<!-- Navbar identique à votre exemple -->
<nav class="topnav navbar navbar-expand-lg navbar-light bg-white shadow">
    <div class="container-fluid justify-content-between">
        <!-- Logo -->
        <a class="navbar-brand d-flex align-items-center pe-3 ps-3" href="{{ path('app_event_home') }}">
            <img src="{{ asset('assets/img/hexatech.png') }}" alt="Evoplan Logo" class="me-2" style="height: 60px;" />
            <span class="h3 mb-0 text-primary">Evoplan</span>
        </a>

        <!-- Liens principaux centrés -->
        <div class="mx-auto">
            <ul class="navbar-nav flex-row gap-4">
                <li class="nav-item">
                    <a class="nav-link fw-semibold fs-5 text-dark" href="{{ path('app_event_home') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fw-semibold fs-5 text-dark" href="#">Feedback</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fw-semibold fs-5 text-dark" href="#">Report</a>
                </li>
            </ul>
        </div>

        <!-- Menu utilisateur -->
        <ul class="navbar-nav align-items-center">
            <li class="nav-item">
                <a class="nav-link text-secondary" href="#!">Help Center</a>
            </li>
            <li class="nav-item dropdown no-caret dropdown-user me-3 me-lg-4">
                <a class="btn btn-icon btn-transparent-dark dropdown-toggle" id="navbarDropdownUserImage" href="javascript:void(0);" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <img class="img-fluid rounded-circle" src="{{ asset('assets/img/illustrations/profiles/profile-1.png') }}" />
                </a>
                <div class="dropdown-menu dropdown-menu-end border-0 shadow animated--fade-in-up" aria-labelledby="navbarDropdownUserImage">
                    <h6 class="dropdown-header d-flex align-items-center">
                        <img class="dropdown-user-img" src="{{ asset('assets/img/illustrations/profiles/profile-1.png') }}" />
                        <div class="dropdown-user-details">
                            <div class="dropdown-user-details-name">Utilisateur</div>
                            <div class="dropdown-user-details-email">user@example.com</div>
                        </div>
                    </h6>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#!"><i data-feather="user"></i> Mon profil</a>
                    <a class="dropdown-item" href="#!"><i data-feather="calendar"></i> Mes événements</a>
                    <a class="dropdown-item" href="#!"><i data-feather="settings"></i> Paramètres</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="{{path('logout')}}"><i data-feather="log-out"></i> Déconnexion</a>
                </div>
            </li>
        </ul>
    </div>
</nav>
<div class="container-xl px-4 mt-3">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}
    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
</div>
<div class="container-xl px-4 mt-5">
    <div class="row">
        <!-- Colonne principale avec les détails de l'événement -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg mb-5">
                <!-- Image de l'événement -->
                <div class="position-relative">
                    {% if event.imageEvent %}
                        <img src="{{ asset('uploads/' ~ event.imageEvent) }}" class="card-img-top w-100" style="height: 400px; object-fit: cover;" alt="{{ event.nom }}">
                    {% else %}
                        <div class="bg-light d-flex align-items-center justify-content-center" style="height: 400px;">
                            <span class="text-muted">Aucune image disponible</span>
                        </div>
                    {% endif %}
                    <span class="position-absolute top-0 end-0 m-3 badge
                        {% if event.statut.value == 'DISPONIBLE' %}bg-success{% else %}bg-danger{% endif %}">
                        {{ event.statut.value }}
                    </span>
                </div>

                <!-- Corps de la carte -->
                <div class="card-body p-5">
                    <h1 class="card-title display-4 fw-bold mb-3">{{ event.nom }}</h1>

                    <!-- Métadonnées -->
                    <div class="d-flex flex-wrap gap-4 mb-4">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-calendar-alt text-primary me-2"></i>
                            <div>
                                <small class="text-muted">Date de début</small>
                                <div class="fw-semibold">{{ event.dateDebut|date('d M Y - H:i') }}</div>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-calendar-check text-primary me-2"></i>
                            <div>
                                <small class="text-muted">Date de fin</small>
                                <div class="fw-semibold">{{ event.dateFin|date('d M Y - H:i') }}</div>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-map-marker-alt text-primary me-2"></i>
                            <div>
                                <small class="text-muted">Lieu</small>
                                <div class="fw-semibold">{{ event.lieu.value }}</div>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-users text-primary me-2"></i>
                            <div>
                                <small class="text-muted">Capacité</small>
                                <div class="fw-semibold">{{ event.capacite }} places</div>
                            </div>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="mb-5">
                        <h3 class="h4 mb-3">Description</h3>
                        <p class="lead">{{ event.description }}</p>
                    </div>

                    <!-- Organisateur -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body p-4">
                            <h3 class="h5 mb-3">Organisé par</h3>
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <img src="{{ asset('assets/img/illustrations/profiles/profile-1.png') }}"
                                         class="rounded-circle"
                                         width="60"
                                         height="60"
                                         alt="Organisateur">
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h4 class="mb-1">Nom de l'organisateur</h4>
                                    <p class="small text-muted mb-0">Membre depuis 2020</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Colonne latérale -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-4">
            <div class="d-grid gap-2"> 
                <a href="{{ path('app_reservation_new', {'id_event': event.id_event}) }}"
                   class="btn btn-primary btn-lg py-3 rounded-pill fw-bold mb-2">  
                    <i class="fas fa-user-plus me-2"></i>S'inscrire à cet événement
                </a>
                
                <a href="{{ path('app_workshop_front', {'id_event': event.id_event}) }}"
                   class="btn btn-primary btn-lg py-3 rounded-pill fw-bold">  
                    <i class="fas fa-chalkboard-teacher me-2"></i>Join Our Workshops
                </a>
                </div>
            </div>

            <!-- Carte de localisation -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <h3 class="h5 mb-3">Localisation</h3>
                    <div class="ratio ratio-16x9 bg-light rounded">
                        <!-- Intégrez ici votre carte Google Maps ou autre -->
                        <div class="d-flex align-items-center justify-content-center text-muted">
                            <i class="fas fa-map-marked-alt fa-3x"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="#" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-directions me-1"></i>Itinéraire
                        </a>
                    </div>
                </div>
            </div>

            <!-- Participants -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h3 class="h5 mb-3">Participants ({{ random(5, event.capacite) }})</h3>
                    <div class="avatar-group">
                        {% for i in 1..8 %}
                            <img src="https://i.pravatar.cc/150?img={{ i }}"
                                 class="rounded-circle border border-2 border-white"
                                 width="40"
                                 height="40"
                                 alt="Participant"
                                 data-bs-toggle="tooltip"
                                 data-bs-placement="top"
                                 title="Participant {{ i }}">
                        {% endfor %}
                        <div class="avatar-more rounded-circle bg-primary text-white d-flex align-items-center justify-content-center"
                             style="width: 40px; height: 40px;">
                            +15
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .avatar-group {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }
    .avatar-more {
        font-size: 0.8rem;
        font-weight: 600;
    }
    .card {
        border-radius: 12px;
        overflow: hidden;
    }
    /* Style pour la navbar intégrée */
    .topnav {
        position: sticky;
        top: 0;
        z-index: 1020;
    }
    /* Style amélioraé pour le bouton d'inscription */
    .btn-inscription {
        transition: all 0.3s ease;
    }
    .btn-inscription:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 123, 255, 0.3);
    }
</style>

{% endblock %}

{% block javascripts %}
{{ parent() }}
