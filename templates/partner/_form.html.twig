{{ form_start(form, {'attr': {'enctype': 'multipart/form-data', 'novalidate': 'novalidate', 'name': 'partner-form'}}) }}
    {% if form.vars.errors is not empty %}
        <div class="alert alert-danger">
            {{ form_errors(form) }}
        </div>
    {% endif %}
    <div class="row">
        <div class="col-md-6 mb-3">
            {{ form_row(form.type_partner, {
                'attr': {'placeholder': 'Enter partner type...'},
                'row_attr': {'class': 'form-field-container'}
            }) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_row(form.email, {
                'attr': {'placeholder': 'Enter email address...'},
                'row_attr': {'class': 'form-field-container'}
            }) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mb-3">
            {{ form_row(form.phone_Number, {
                'attr': {'placeholder': 'Enter phone number...'},
                'row_attr': {'class': 'form-field-container'}
            }) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_row(form.logoFile, {
                'help': 'Upload partner logo (optional)',
                'row_attr': {'class': 'form-field-container'}
            }) }}
            {% if form.parent.vars.data.logo is defined and form.parent.vars.data.logo %}
                <div class="mt-2 current-logo-preview">
                    <img src="{{ asset(form.parent.vars.data.logo) }}" alt="Current logo" style="height: 80px; width: auto;" class="mt-2">
                    <p class="text-muted small">Current logo (leave empty to keep)</p>
                </div>
            {% endif %}
        </div>
    </div>
    <div class="mt-4">
        <button type="submit" class="btn btn-primary lift">
            <i data-feather="save" class="me-1"></i>
            {{ button_label|default('Save') }}
        </button>
        <a href="{{ path('app_partner_index') }}" class="btn btn-light lift ms-2">
            <i data-feather="x" class="me-1"></i>
            Cancel
        </a>
    </div>
{{ form_end(form) }}