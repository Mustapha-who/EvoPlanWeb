{% extends 'User/base_dashboard.html.twig' %}

{% block title %}Edit Partner - EvoPlan{% endblock %}

{% block content %}
    <header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
        <div class="container-xl px-4">
            <div class="page-header-content pt-4">
                <div class="row align-items-center justify-content-between">
                    <div class="col-auto mt-4">
                        <h1 class="page-header-title">Edit Partner</h1>
                        <div class="page-header-subtitle">Modify partner information</div>
                    </div>
                    <div class="col-12 col-xl-auto mt-4">
                        <a href="{{ path('app_partner_index') }}" class="btn btn-white lift">
                            <i class="fas fa-arrow-left me-1"></i>
                            Back to list
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Main page content-->
    <div class="container-xl px-4 mt-n10">
        <div class="card mb-4">
            <div class="card-header">Partner Details</div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Type</label>
                            {{ form_widget(form.type_partner, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Email</label>
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Phone Number</label>
                            {{ form_widget(form.phone_Number, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {% if partner.logo %}
                                <div class="mb-3">
                                    <label>Current Logo:</label><br>
                                    <img src="{{ asset(partner.logo) }}" alt="Current logo" style="height: 100px; width: auto;">
                                </div>
                            {% endif %}
                            <label>Upload New Logo (Optional)</label>
                            {{ form_widget(form.logoFile, {'attr': {'class': 'form-control'}}) }}
                            <small class="text-muted">Leave empty to keep the current logo.</small>
                        </div>
                    </div>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary lift">
                        <i class="fas fa-save me-1"></i>
                        Update
                    </button>
                    <a href="{{ path('app_partner_index') }}" class="btn btn-light lift ms-2">
                        <i class="fas fa-arrow-left me-1"></i>
                        Back to list
                    </a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        window.addEventListener('DOMContentLoaded', event => {
            feather.replace();
        });
    </script>
{% endblock %}