{% extends 'User/base_dashboard.html.twig' %}

{% block title %}Edit Partner - EvoPlan{% endblock %}

{% block page_title %}Edit Partner{% endblock %}

{% block page_subtitle %}Modify partner information{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">Edit Partner</div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Type</label>
                            {{ form_widget(form.type_partner, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Email</label>
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Phone Number</label>
                            {{ form_widget(form.phone_Number, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {% if partner.logo %}
                                <div class="mb-3">
                                    <label>Current Logo:</label><br>
                                    <img src="{{ asset(partner.logo) }}" alt="Current logo" style="height: 100px; width: auto;">
                                </div>
                            {% endif %}
                            <label>Upload New Logo (Optional)</label>
                            {{ form_widget(form.logoFile, {'attr': {'class': 'form-control'}}) }}
                            <small class="text-muted">Leave empty to keep the current logo.</small>
                        </div>
                    </div>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary lift">
                        <i data-feather="save" class="me-1"></i>
                        Update
                    </button>
                    <a href="{{ path('app_partner_index') }}" class="btn btn-light lift ms-2">
                        <i data-feather="arrow-left" class="me-1"></i>
                        Back to list
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        window.addEventListener('DOMContentLoaded', event => {
            feather.replace();
        });
    </script>
{% endblock %}