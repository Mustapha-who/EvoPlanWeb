<form method="post" action="{{ path('app_partner_delete', {'id_partner': partner.id_partner}) }}"
      onsubmit="return confirm('Are you sure you want to delete this partner?');"
      style="display: inline-block;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ partner.id_partner) }}">
    <button type="submit" class="btn btn-sm btn-danger">
        <i class="fas fa-trash-alt"></i> Delete
    </button>
</form>