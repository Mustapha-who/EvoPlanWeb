{% extends 'User/base_dashboard.html.twig' %}

{% block title %}Partner Details - EvoPlan{% endblock %}

{% block content %}
    <header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
        <div class="container-xl px-4">
            <div class="page-header-content pt-4">
                <div class="row align-items-center justify-content-between">
                    <div class="col-auto mt-4">
                        <h1 class="page-header-title">Partner Details</h1>
                        <div class="page-header-subtitle">View partner information</div>
                    </div>
                    <div class="col-12 col-xl-auto mt-4">
                        <div class="d-flex">
                            <a href="{{ path('app_partner_edit', {'id_partner': partner.id_partner}) }}" class="btn btn-white lift me-2">
                                <i class="fas fa-edit me-1"></i>
                                Edit
                            </a>
                            <a href="{{ path('app_partner_index') }}" class="btn btn-white lift">
                                <i class="fas fa-arrow-left me-1"></i>
                                Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Main page content-->
    <div class="container-xl px-4 mt-n10">
        <div class="card mb-4">
            <div class="card-header">Partner Information</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="table-responsive">
                            <table class="table table-borderless mb-0">
                                <tbody>
                                <tr>
                                    <th>Type:</th>
                                    <td>{{ partner.typePartner }}</td>
                                </tr>
                                <tr>
                                    <th>Email:</th>
                                    <td>{{ partner.email }}</td>
                                </tr>
                                <tr>
                                    <th>Phone Number:</th>
                                    <td>{{ partner.phoneNumber }}</td>
                                </tr>
                                <tr>
                                    <th>Logo:</th>
                                    <td>
                                        {% if partner.logo %}
                                            <img src="{{ asset(partner.logo) }}" alt="Partner logo" style="height: 100px; width: auto;">
                                        {% else %}
                                            No logo
                                        {% endif %}
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                {{ include('partner/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}