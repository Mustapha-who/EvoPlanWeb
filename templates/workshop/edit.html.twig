{% extends 'User/base_dashboard.html.twig' %}

{% block title %}Edit Workshop{% endblock %}

{% block content %}
    <header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
        <div class="container-xl px-4">
            <div class="page-header-content">
                <div class="row align-items-center justify-content-between pt-3">
                    <div class="col-auto mb-3">
                        <h1 class="page-header-title">
                            <div class="page-header-icon"><i data-feather="edit"></i></div>
                            Edit Workshop
                        </h1>
                    </div>
                    <div class="col-12 col-xl-auto mb-3">
                        <a class="btn btn-sm btn-light text-primary" href="{{ path('app_workshop_index') }}">
                            <i class="me-1" data-feather="arrow-left"></i>
                            Back to Workshops
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container-xl px-4">
        <div class="card">
            <div class="card-header">Edit Workshop Details</div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-4 mb-4">
                        {{ form_row(form.title, {
                            'attr': {'class': 'form-control'},
                            'row_attr': {'class': 'mb-3'}
                        }) }}
                    </div>
                    <div class="col-md-4 mb-4">
                        {{ form_row(form.id_event, {
                            'attr': {'class': 'form-select'},
                            'row_attr': {'class': 'mb-3'}
                        }) }}
                    </div>
                    <div class="col-md-4 mb-4">
                        {{ form_row(form.instructor, {
                            'attr': {'class': 'form-control'},
                            'row_attr': {'class': 'mb-3'}
                        }) }}
                    </div>
                    <div class="col-md-4 mb-4">
                        {{ form_label(form.date) }}
                        {{ form_widget(form.date, {
                            'attr': {
                                'class': 'form-control' ~ (form.enddate.vars.errors|length ? ' is-invalid' : '')
                            }
                        }) }}
                    </div>
                    <div class="col-md-4 mb-4">
                        {{ form_label(form.enddate) }}
                        {{ form_widget(form.enddate, {
                            'attr': {
                                'class': 'form-control' ~ (form.enddate.vars.errors|length ? ' is-invalid' : '')
                            }
                        }) }}
                        {% if form.enddate.vars.errors|length > 0 %}
                            <div class="invalid-feedback d-block">
                                {% for error in form.enddate.vars.errors %}
                                    {{ error.message|trans(error.messageParameters, 'validators') }}
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                    <div class="col-md-4 mb-4">
                        {{ form_row(form.capacity, {
                            'attr': {'class': 'form-control'},
                            'row_attr': {'class': 'mb-3'}
                        }) }}
                    </div>
                    <div class="col-md-6 mb-4">
                        {{ form_row(form.location, {
                            'attr': {'class': 'form-control'},
                            'row_attr': {'class': 'mb-3'}
                        }) }}
                    </div>
                    <div class="col-md-6 mb-4">
                        {{ form_row(form.description, {
                            'attr': {'class': 'form-control', 'rows': 3},
                            'row_attr': {'class': 'mb-3'}
                        }) }}
                    </div>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="me-1" data-feather="save"></i>
                        {{ button_label|default('Update Workshop') }}
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            feather.replace();
        });
    </script>
{% endblock %}
