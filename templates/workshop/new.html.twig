{% extends 'User/base_dashboard.html.twig' %}

{% block title %}New Workshop{% endblock %}

{% block content %}
    <header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
        <div class="container-xl px-4">
            <div class="page-header-content">
                <div class="row align-items-center justify-content-between pt-3">
                    <div class="col-auto mb-3">
                        <h1 class="page-header-title">
                            <div class="page-header-icon"><i data-feather="plus"></i></div>
                            Create New Workshop
                        </h1>
                    </div>
                    <div class="col-12 col-xl-auto mb-3">
                        <a class="btn btn-sm btn-light text-primary" href="{{ path('app_workshop_index') }}">
                            <i class="me-1" data-feather="arrow-left"></i>
                            Back to Workshops
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container-xl px-4">
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">Workshop Details</div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_row(form.title, {
                                        'attr': {'class': 'form-control form-control-sm'},
                                        'row_attr': {'class': 'mb-2'}
                                    }) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.id_event, {
                                        'attr': {'class': 'form-select form-select-sm'},
                                        'row_attr': {'class': 'mb-2'}
                                    }) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_label(form.date) }}
                                    {{ form_widget(form.date, {
                                        'attr': {
                                            'class': 'form-control form-control-sm' ~ (form.enddate.vars.errors|length ? ' is-invalid' : '')
                                        }
                                    }) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_label(form.enddate) }}
                                    {{ form_widget(form.enddate, {
                                        'attr': {
                                            'class': 'form-control form-control-sm' ~ (form.enddate.vars.errors|length ? ' is-invalid' : '')
                                        }
                                    }) }}
                                    {% if form.enddate.vars.errors|length > 0 %}
                                        <div class="invalid-feedback d-block">
                                            {% for error in form.enddate.vars.errors %}
                                                {{ error.message|trans(error.messageParameters, 'validators') }}
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.instructor, {
                                        'attr': {'class': 'form-control form-control-sm'},
                                        'row_attr': {'class': 'mb-2'}
                                    }) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.capacity, {
                                        'attr': {'class': 'form-control form-control-sm'},
                                        'row_attr': {'class': 'mb-2'}
                                    }) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.location, {
                                        'attr': {'class': 'form-control form-control-sm'},
                                        'row_attr': {'class': 'mb-2'}
                                    }) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.description, {
                                        'attr': {'class': 'form-control form-control-sm', 'rows': 2},
                                        'row_attr': {'class': 'mb-2'}
                                    }) }}
                                </div>
                            </div>
                        </div>
                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="me-1" data-feather="save"></i>
                                {{ button_label|default('Create Workshop') }}
                            </button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Workshop Generator</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="chatInput" class="form-label">What kind of workshop would you like to create?</label>
                            <textarea id="chatInput" class="form-control mb-2" rows="3" placeholder="Describe the workshop you want to create..."></textarea>
                            <button id="generateBtn" class="btn btn-primary w-100">
                                <i class="fas fa-magic me-2"></i>Generate Workshop
                            </button>
                        </div>
                        <div id="loadingSpinner" class="text-center d-none">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                        <div id="responseArea" class="alert alert-info d-none"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            feather.replace();
        });

        document.getElementById('generateBtn').addEventListener('click', async function() {
            const input = document.getElementById('chatInput').value;
            const spinner = document.getElementById('loadingSpinner');
            const responseArea = document.getElementById('responseArea');
            
            spinner.classList.remove('d-none');
            this.disabled = true;
            
            try {
                const response = await fetch('{{ path('app_workshop_generate') }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ prompt: input })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Auto-fill the form
                    document.querySelector('#workshop_title').value = data.title;
                    document.querySelector('#workshop_description').value = data.description;
                    
                    responseArea.textContent = 'Workshop data generated successfully!';
                    responseArea.classList.remove('d-none', 'alert-danger');
                    responseArea.classList.add('alert-success');
                } else {
                    throw new Error(data.message || 'Failed to generate workshop data');
                }
            } catch (error) {
                responseArea.textContent = error.message;
                responseArea.classList.remove('d-none', 'alert-success');
                responseArea.classList.add('alert-danger');
            } finally {
                spinner.classList.add('d-none');
                this.disabled = false;
            }
        });
    </script>
{% endblock %}
