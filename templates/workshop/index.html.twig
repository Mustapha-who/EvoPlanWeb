{% extends 'base.html.twig' %}

{% block title %}Workshop index{% endblock %}

{% block body %}
    <header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
        <div class="container-xl px-4">
            <div class="page-header-content pt-4">
                <div class="row align-items-center justify-content-between">
                    <div class="col-auto mt-4">
                        <h1 class="page-header-title">
                            <div class="page-header-icon"><i data-feather="filter"></i></div>
                            Workshops
                        </h1>
                        <div class="page-header-subtitle">Workshop management and overview</div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container-xl px-4 mt-n10">
        <div class="card mb-4">
            <div class="card-header">Workshop List</div>
            <div class="card-body">
                <table id="datatablesSimple" class="table table-bordered table-striped table-hover">
                    <thead class="bg-light">
                        <tr>
                            <th class="text-center">ID Workshop</th>
                            <th>Title</th>
                            <th>Date</th>
                            <th>End Date</th>
                            <th>Instructor</th>
                            <th>ID_Event</th>
                            <th class="text-center">Capacity</th>
                            <th>Location</th>
                            <th>Description</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                  
                    <tbody>
                    {% for workshop in workshops %}
                        <tr>
                            <td class="text-center" style="width: 5px;">{{ workshop.id_workshop }}</td>
                            <td>{{ workshop.title }}</td>
                            <td>{{ workshop.date ? workshop.date|date('m-d-Y') : '' }}</td>
                            <td>{{ workshop.enddate ? workshop.enddate|date('m-d-Y') : '' }}</td>
                            <td>{{ workshop.instructor ? workshop.instructor.id ~ ' - ' ~ workshop.instructor.name }}</td>
                            <td>{{ workshop.Idevent ? workshop.Idevent.id_event ~ ' - ' ~ workshop.Idevent.nom : '' }}</td>
                            <td class="text-center">{{ workshop.capacity }}</td>
                            <td>{{ workshop.location }}</td>
                            <td style="max-width: 300px; white-space: normal; word-wrap: break-word;">
                                {{ workshop.description }}
                            </td>
                            <td class="text-center">
                                <button class="btn btn-datatable btn-icon btn-transparent-dark me-2" onclick="location.href='{{ path('app_session_index', {'workshop_id': workshop.id_workshop}) }}'">
                                    <i data-feather="file-text"></i>
                                </button>
                                <button class="btn btn-datatable btn-icon btn-transparent-dark me-2" onclick="location.href='{{ path('app_workshop_edit', {'id_workshop': workshop.id_workshop}) }}'">
                                    <i data-feather="edit"></i>
                                </button>
                                <form method="post" action="{{ path('app_workshop_delete', {'id_workshop': workshop.id_workshop}) }}" style="display: inline-block" onsubmit="return confirm('Are you sure you want to delete this workshop?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ workshop.id_workshop) }}">
                                    <button type="submit" class="btn btn-datatable btn-icon btn-transparent-dark">
                                        <i data-feather="trash-2"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                
                <div class="mt-4">
                    <a class="btn btn-primary" href="{{ path('app_workshop_new') }}">Create New Workshop</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
