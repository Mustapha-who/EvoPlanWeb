{% extends 'base.html.twig' %}

{% block title %}Publications{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Liste des publications</h1>
        <div>
            <a href="{{ path('app_publication_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nouvelle publication
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Contenu</th>
                        <th>Date</th>
                        <th>Plateforme</th>
                        <th>Événement</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for publication in publications %}
                    <tr>
                        <td>{{ publication.contenu|length > 50 ? publication.contenu|slice(0, 50) ~ '...' : publication.contenu }}</td>
                        <td>{{ publication.datePublication|date('d/m/Y H:i') }}</td>
                        <td>
                            <span class="badge bg-{{ publication.plateforme == 'facebook' ? 'primary' : 'danger' }}">
                                {{ publication.plateforme|capitalize }}
                            </span>
                        </td>
                        <td>{{ publication.event ? publication.event.nom : 'Aucun' }}</td>
                        <td>
                            {% if publication.imagePath %}
                                <img src="{{ asset('uploads/publications/' ~ publication.imagePath) }}"
                                     width="80" class="img-thumbnail">
                            {% else %}
                                <span class="text-muted">Aucune</span>
                            {% endif %}
                        </td>
                        <td>
                            <!-- Ajoutez ici vos boutons d'action -->
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            Aucune publication trouvée. Créez-en une !
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}