{% extends 'base.html.twig' %}

{% block title %}Détails de la Réclamation{% endblock %}

{% block body %}
    <header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
        <div class="container-xl px-4">
            <div class="page-header-content pt-4">
                <div class="row align-items-center justify-content-between">
                    <div class="col-auto mt-4">
                        <h1 class="page-header-title">
                            <div class="page-header-icon"><i data-feather="eye"></i></div>
                            Détails de la Réclamation #{{ claim.id }}
                        </h1>
                    </div>
                    <div class="col-12 col-xl-auto mt-4">
                        <a href="{{ path('app_claim_index') }}" class="btn btn-secondary">
                            <i data-feather="arrow-left"></i>
                            Retour à la liste
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container-xl px-4 mt-n10">
        <div class="card mb-4">
            <div class="card-header">
                <span>Informations de la réclamation</span>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">{{ claim.description }}</dd>
                    <dt class="col-sm-3">Type</dt>
                    <dd class="col-sm-9">{{ claim.claimType }}</dd>
                    <dt class="col-sm-3">Statut</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-{{ claim.claimStatus == 'new' ? 'warning' : (claim.claimStatus == 'in_progress' ? 'info' : 'success') }}">
                            {{ claim.claimStatus }}
                        </span>
                    </dd>
                    <dt class="col-sm-3">Date de création</dt>
                    <dd class="col-sm-9">{{ claim.creationDate ? claim.creationDate|date('d/m/Y') : 'N/A' }}</dd>
                    <dt class="col-sm-3">Client</dt>
                    <dd class="col-sm-9">{{ claim.client ? claim.client.phoneNumber : 'N/A' }}</dd>
                </dl>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .badge {
            padding: 5px 10px;
            font-size: 14px;
        }
        .row {
            margin-bottom: 15px;
        }
        dt {
            font-weight: 500;
            color: #495057;
        }
        dd {
            margin-bottom: 0;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            border-radius: 0.375rem;
        }
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }
    </style>
{% endblock %}