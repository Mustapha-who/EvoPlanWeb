{% extends 'base.html.twig' %}

{% block title %}Modifier Réclamation{% endblock %}

{% block body %}
    <header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
        <div class="container-xl px-4">
            <div class="page-header-content pt-4">
                <div class="row align-items-center justify-content-between">
                    <div class="col-auto mt-4">
                        <h1 class="page-header-title">
                            <div class="page-header-icon"><i data-feather="edit"></i></div>
                            Modifier Réclamation
                        </h1>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container-xl px-4 mt-n10">
        <div class="card mb-4">
            <div class="card-header bg-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h2 class="card-title mb-0 text-primary">Formulaire de modification</h2>
                    <i data-feather="edit-3" class="text-muted"></i>
                </div>
            </div>
            <div class="card-body">
                {% for flashMessage in app.flashes('success') %}
                    <div class="alert alert-success">{{ flashMessage }}</div>
                {% endfor %}

                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.description, {
                                    'attr': {
                                        'class': 'form-control' ~ (form.description.vars.errors|length ? ' is-invalid' : ''),
                                        'placeholder': 'Décrivez votre réclamation...',
                                        'style': 'height: 100px'
                                    }
                                }) }}
                                {{ form_errors(form.description) }}
                                <div class="form-text">20 caractères minimum</div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Date de création</label>
                                <input type="text" class="form-control" value="{{ claim.creationDate|date("d/m/Y") }}" readonly>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">Client</label>
                                <input type="text" class="form-control" value="{{ claim.client }}" readonly>
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.claim_type, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.claim_type, {
                                    'attr': {
                                        'class': 'form-select' ~ (form.claim_type.vars.errors|length ? ' is-invalid' : '')
                                    }
                                }) }}
                                {{ form_errors(form.claim_type) }}
                            </div>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_claim_index') }}" class="btn btn-outline-secondary">
                            <i data-feather="arrow-left" class="me-2"></i> Retour à la liste
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i data-feather="save" class="me-2"></i> Enregistrer
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        // Active la validation Bootstrap
        (function () {
            'use strict'
            
            const forms = document.querySelectorAll('.needs-validation')
            
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
{% endblock %}