<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Partnership Contract - {{ eventName }}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            margin: 0;
            padding: 0;
        }
        .container {
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        .header {
            text-align: center;
            margin-bottom: 30px;
            padding-bottom: 10px;
            border-bottom: 2px solid #4e73df;
        }
        .contract-title {
            color: #4e73df;
            font-size: 24px;
            margin-bottom: 5px;
        }
        .contract-subtitle {
            font-size: 16px;
            color: #666;
        }
        .contract-info {
            margin-bottom: 30px;
        }
        .section {
            margin-bottom: 20px;
        }
        .section-title {
            font-weight: bold;
            font-size: 18px;
            margin-bottom: 10px;
            color: #4e73df;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        .terms-box {
            background-color: #f9f9f9;
            padding: 15px;
            border-left: 3px solid #4e73df;
            margin-bottom: 20px;
        }
        .signature-section {
            margin-top: 40px;
            display: flex;
            justify-content: space-between;
        }
        .signature-box {
            width: 45%;
        }
        .signature-line {
            border-top: 1px solid #333;
            padding-top: 5px;
            margin-top: 70px;
        }
        .footer {
            margin-top: 40px;
            text-align: center;
            font-size: 12px;
            color: #777;
        }
        .pdf-button {
            background-color: #4e73df;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            margin-bottom: 20px;
        }
        .pdf-button:hover {
            background-color: #2e59d9;
        }
        .back-button {
            background-color: #6c757d;
            color: white; 
            padding: 10px 20px; 
            border-radius: 5px; 
            text-decoration: none;
            display: inline-block;
            margin-left: 15px;
        }
        .back-button:hover {
            background-color: #5a6268;
        }
        
        @media print {
            .no-print {
                display: none !important;
            }
            body {
                padding: 0;
                margin: 0;
            }
            .container {
                width: 100%;
                max-width: none;
                padding: 20px;
            }
        }
    </style>
    <script type="text/javascript">
        function getPDFFileName() {
            var path = window.location.pathname;
            var filename = path.split('/').pop();
            // If filename is HTML, replace extension with PDF for the download
            if (filename.toLowerCase().endsWith('.html')) {
                return filename.replace(/\.html$/i, '.pdf');
            }
            return 'contract.pdf';
        }
        
        function savePdf() {
            // Hide the button temporarily for printing
            document.querySelector('.no-print').style.display = 'none';
            
            // Set PDF filename
            const filename = getPDFFileName();
            
            // Configure print options
            const opt = {
                margin: 0.5,
                filename: filename,
                image: { type: 'jpeg', quality: 0.98 },
                html2canvas: { scale: 2 },
                jsPDF: { unit: 'in', format: 'letter', orientation: 'portrait' }
            };
            
            // Use html2pdf library if it's available, otherwise use browser print
            if (typeof html2pdf !== 'undefined') {
                const element = document.body;
                html2pdf().set(opt).from(element).save().then(() => {
                    document.querySelector('.no-print').style.display = 'block';
                });
            } else {
                // Fallback to browser print
                window.print();
                
                // Show the button again after printing dialog is closed
                setTimeout(function() {
                    document.querySelector('.no-print').style.display = 'block';
                }, 1000);
            }
        }
        
        // Check if we're viewing the HTML version
        function isHtmlVersion() {
            return window.location.pathname.toLowerCase().endsWith('.html');
        }
        
        // Show/hide save button depending on file type
        window.onload = function() {
            var pdfButtons = document.querySelectorAll('.pdf-buttons');
            if (!isHtmlVersion()) {
                // If this is already a PDF (viewed in browser), hide the save button
                pdfButtons.forEach(function(btn) {
                    btn.style.display = 'none';
                });
            }
        };
    </script>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1 class="contract-title">Partnership Contract</h1>
            <p class="contract-subtitle">Agreement between EvoPlan and {{ partnerEmail }}</p>
        </div>
        
        <div class="contract-info">
            <p>This contract is entered into on {{ startDate | date('F d, Y') }} by and between:</p>
            <p><strong>EvoPlan</strong>,</p>
            <p><strong>{{ partnerEmail }}</strong></p>
        </div>
        
        <div class="section">
            <h2 class="section-title">Partnership Details</h2>
            <table>
                <tr>
                    <th>Event</th>
                    <td>{{ eventName }}</td>
                </tr>
                <tr>
                    <th>Partnership Type</th>
                    <td>{{ partnerType }}</td>
                </tr>
                <tr>
                    <th>Start Date</th>
                    <td>{{ startDate | date('Y-m-d') }}</td>
                </tr>
                <tr>
                    <th>End Date</th>
                    <td>{{ endDate | date('Y-m-d') }}</td>
                </tr>
            </table>
        </div>
        
        <div class="section">
            <h2 class="section-title">Terms and Conditions</h2>
            <div class="terms-box">
                {{ terms|nl2br }}
            </div>
        </div>
        
        <div class="section">
            <p>By accepting this partnership, both parties agree to the terms and conditions outlined in this contract.</p>
        </div>
        
        <div class="signature-section">
            <div class="signature-box">
                <div class="signature-line">Organization Representative</div>
            </div>
            <div class="signature-box">
                <div class="signature-line">Partner Representative</div>
            </div>
        </div>
        
        <div class="footer">
            <p>This document serves as an official contract between EvoPlan and the Partner.</p>
            <p>Contract generated on {{ "now"|date('F d, Y') }}</p>
        </div>
    </div>
    
    <!-- Optional: Only include html2pdf.js library if available -->
    <script>
        // Check if we can load html2pdf.js (if server has internet access)
        var script = document.createElement('script');
        script.src = 'https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js';
        script.onerror = function() {
            console.log('html2pdf.js could not be loaded, will use browser print dialog instead');
        };
        document.head.appendChild(script);
    </script>
</body>
</html> 