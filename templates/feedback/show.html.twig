{% extends 'base.html.twig' %}

{% block title %}Détails Feedback #{{ feedback.id }}{% endblock %}

{% block body %}
    <header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
        <div class="container-xl px-4">
            <div class="page-header-content pt-4">
                <div class="row align-items-center justify-content-between">
                    <div class="col-auto mt-4">
                        <h1 class="page-header-title">
                            <div class="page-header-icon"><i data-feather="file-text"></i></div>
                            Détails Feedback #{{ feedback.id }}
                        </h1>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container-xl px-4 mt-n10">
        <div class="card mb-4">
            <div class="card-header">Informations détaillées</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <h5 class="fw-bold">Commentaire</h5>
                            <p>{{ feedback.comments }}</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <h5 class="fw-bold">Note</h5>
                            <p>
                                <span class="star-rating" title="{{ feedback.rating }}/5">
                                    {% for i in 1..5 %}
                                        {% if i <= feedback.rating %}
                                            <i class="fas fa-star text-warning"></i>
                                        {% else %}
                                            <i class="far fa-star text-muted"></i>
                                        {% endif %}
                                    {% endfor %}
                                </span>
                                ({{ feedback.rating }}/5)
                            </p>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <a href="{{ path('app_feedback_index') }}" class="btn btn-secondary">
                        <i data-feather="arrow-left"></i> Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}