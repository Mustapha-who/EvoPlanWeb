{% extends 'base.html.twig' %}

{% block title %}Admin - Modifier un Feedback{% endblock %}

{% block body %}
    <header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
        <div class="container-xl px-4">
            <div class="page-header-content pt-4">
                <div class="row align-items-center justify-content-between">
                    <div class="col-auto mt-4">
                        <h1 class="page-header-title">
                            <div class="page-header-icon"><i data-feather="edit"></i></div>
                            Administration - Modifier un Feedback
                        </h1>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container-xl px-4 mt-n10">
        <div class="card mb-4">
            <div class="card-header">Modifier le Feedback</div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.comments, 'Commentaire', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.comments, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.rating, 'Note', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.rating, {'attr': {'class': 'form-select'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.client, 'Client', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.client, {'attr': {'class': 'form-select'}}) }}
                    </div>
                    <div class="d-flex justify-content-end">
                        <a href="{{ path('app_feedback_admin_index') }}" class="btn btn-secondary me-2">
                            <i data-feather="arrow-left"></i>
                            Retour
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i data-feather="save"></i>
                            Enregistrer
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}