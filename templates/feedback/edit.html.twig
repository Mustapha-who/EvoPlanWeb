{% extends 'base.html.twig' %}

{% block title %}Modifier Feedback #{{ feedback.id }}{% endblock %}

{% block body %}
    <header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
        <div class="container-xl px-4">
            <div class="page-header-content pt-4">
                <div class="row align-items-center justify-content-between">
                    <div class="col-auto mt-4">
                        <h1 class="page-header-title">
                            <div class="page-header-icon"><i data-feather="edit"></i></div>
                            Modifier Feedback #{{ feedback.id }}
                        </h1>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container-xl px-4 mt-n10">
        <div class="card mb-4">
            <div class="card-header bg-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h2 class="card-title mb-0 text-primary">Formulaire de modification</h2>
                    <i data-feather="edit-3" class="text-muted"></i>
                </div>
            </div>
            <div class="card-body">
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">{{ message }}</div>
                {% endfor %}

                {{ form_start(form) }}
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.comments) }}
                            {{ form_widget(form.comments, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.rating) }}
                            {{ form_widget(form.rating, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.client) }}
                            {{ form_widget(form.client, {'attr': {'class': 'form-select'}}) }}
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_feedback_index') }}" class="btn btn-outline-secondary">
                        <i data-feather="arrow-left"></i> Retour
                    </a>
                    <div>
                        <button type="submit" class="btn btn-primary">
                            <i data-feather="save"></i> Enregistrer
                        </button>
                    </div>
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            feather.replace();
        });
    </script>
{% endblock %}